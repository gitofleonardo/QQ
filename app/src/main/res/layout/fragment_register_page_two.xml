<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.acount.registermvp.registerfragment.RegisterPageTwoFragment"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TextView
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="输入短信验证码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="已向+86 18376041995发送验证码"
        android:id="@+id/to_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <cn.huangchengxi.kotlintest.customedviews.CodeValidatorView
        android:id="@+id/code_input"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/tencent_blue"
        android:text="重新发送"
        android:id="@+id/count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>